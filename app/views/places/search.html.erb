<section class="">
  <div class="container px-4 mx-auto">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="pt-4 bg-white shadow rounded">
          <div class="px-6 border-b border-blue-50">
            <div class="flex flex-wrap items-center mb-4">
              <div>
                <h3 class="text-xl font-bold">Instalaciones</h3>
                <p class="text-sm text-gray-500 font-medium">Resultados obtenidos para: <%= @q %></p>
              </div>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="table-auto w-full">
              <thead class="bg-gray-50">
                <tr class="text-xs text-gray-500 text-left">
                  <th class="flex items-center pl-6 py-4 font-medium">
                    <span>Nombre</span>
                  </th>
                  <th class="font-medium">Camaras Totales</th>
                  <th class="font-medium">Camaras Fuera de servicio</th>
                  <th class="font-medium">Porcentaje F/S</th>
                </tr>
              </thead>
              <tbody>
                <% @places.each do |place| %>
                    <tr class="border-b border-blue-50">
                        <td class="flex items-center py-4 px-6 font-medium">
                            <%= link_to place, class:"font-medium text-indigo-500 hover:underline" do %>
                                <p class="text-sm font-medium"><%= place.name %></p>
                            <% end %>
                        </td>
                        <td class="font-medium">
                            <p class="text-sm"><%= place.total %></p>
                        </td>
                        <td class="font-medium">
                            <p class="text-sm"><%= place.fs %></p>
                        </td>
                        <td class="pr-6">
                            <p class="mb-1 text-xs text-indigo-500 font-medium"><%= place.fs_percentage %>%</p>
                        </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>