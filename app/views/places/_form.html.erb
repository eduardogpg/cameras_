      <div class="mb-4">
        <%= camera_form.number_field camera.working, class:"appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
      </div>
      <div class="mb-4">
        <%= camera_form.number_field camera.fs, class:"appearance-none block w-full py-3 px-4 leading-tight text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
      </div>
    <% end %>
  <% end %>
